{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**/*.config.*",
      "**/src/**",
      "**/bin/**",
      "**/day*/**",
      "**/*.json",
      "**/*.md",
      "**/*.yaml",
      "**/*.yml",
      "!**/node_modules",
      "!**/dist",
      "!**/coverage"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 160,
    "includes": ["**"]
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5",
      "semicolons": "always",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double"
    }
  }
}
